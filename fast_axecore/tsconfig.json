{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "ES2017", "es2021"],
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist/",
    "declaration": true,
    "moduleResolution": "node",
    "rootDirs": ["."],
    "baseUrl": ".",
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
  },
  "include": [
    "locales",
    "lib",
    "globals.d.ts", 
    "axe.d.ts",
    "lib/**/*.json",
    "lib/*.stub"
  ]
}
